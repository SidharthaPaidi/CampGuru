    <body class="d-flex flex-column vh-100">
        <!-- Include the navbar partial -->
        <%- include('../partials/navbar') %>

            <main class="container mt-5">
                <!-- Include the flash partial -->
                <%- include('../partials/flash') %>
                    <!-- Include the body partial -->
                    <%- body -%>
            </main>
            <!-- Include the footer partial -->
            <%- include('../partials/footer') %>
                <!-- Include the Popper.js library from a CDN -->
                <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.9.2/dist/umd/popper.min.js"
                    integrity="sha384-IQsoLXl5PILFhosVNubq5LC7Qb9DXgDA9i+tQ8Zj3iwWAwPtgFTxbJ8NT4GN1R8p"
                    crossorigin="anonymous"></script>
                <!-- Include the Bootstrap JS library from a CDN -->
                <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.min.js"
                    integrity="sha384-cVKIPhGWiC2Al4u+LWgxfKTRIcfu0JTxR+EQDz/bgldoEyl4H0zUF0QKbrJ0EcQF"
                    crossorigin="anonymous"></script>
                <!-- Include the jQuery library from a CDN -->
                <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>

                <!-- Include the Bootstrap JS library from a CDN -->
                <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/js/bootstrap.min.js"></script>
                <!-- Include the validateForm.js script -->
                <script src="/javascripts/validateForm.js"></script>

                <!-- Include the bs-custom-file-input library from a CDN -->
                <script
                    src="https://cdn.jsdelivr.net/npm/bs-custom-file-input/dist/bs-custom-file-input.min.js"></script>

                <!-- Include the validateForm.js script -->
                <script src="/javascripts/validateForm.js"></script>

                <!-- Script to display the uploaded file name -->
                <script>
                    // Add an event listener for the 'change' event on the element with id 'image'
                    document.getElementById('image').addEventListener('change', function () {
                        // Initialize an empty string to hold the list of file names
                        var fileList = '';
                        // Loop over each file in the files property of the 'image' element
                        for (var i = 0; i < this.files.length; i++) {
                            // Append the name of the current file, followed by a comma and a space, to the fileList string
                            fileList += this.files[i].name + ', ';
                        }
                        // Remove the last comma and space from the fileList string
                        fileList = fileList.slice(0, -2);
                        // Set the text content of the element with id 'imageLabel' to the fileList string
                        // If fileList is empty, set the text content to 'Add Images'
                        document.getElementById('imageLabel').textContent = fileList ? `FileName : ${fileList}` : 'Add Images';
                    });
                </script>


    </body>

</html>