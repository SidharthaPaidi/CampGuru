            <!-- Script to display the uploaded file name -->
            <script>
                // Add an event listener for the 'change' event on the element with id 'image'
                document.getElementById('image').addEventListener('change', function () {
                    // Initialize an empty string to hold the list of file names
                    var fileList = '';
                    // Loop over each file in the files property of the 'image' element
                    for (var i = 0; i < this.files.length; i++) {
                        // Append the name of the current file, followed by a comma and a space, to the fileList string
                        fileList += this.files[i].name + ', ';
                    }
                    // Remove the last comma and space from the fileList string
                    fileList = fileList.slice(0, -2);
                    // Set the text content of the element with id 'imageLabel' to the fileList string
                    // If fileList is empty, set the text content to 'Add Images'
                    document.getElementById('imageLabel').textContent = fileList ? `FileName : ${fileList}` : 'Add Images';
                });
            </script>

